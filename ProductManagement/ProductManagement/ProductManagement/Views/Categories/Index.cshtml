@model IEnumerable<ProductManagement.Models.Entities.Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categories List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; New Category
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped text-center" style="width:100%;">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>IsActive</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width:50%">@item.CategoryId</td>
                <td style="width:30%">@item.CategoryName</td>
                <td style="width:30%">
                    @if (item.IsActive)
                    {
                        <a class="btn btn-sm btn-primary ">Yes<i class="bi bi-check2-square"></i></a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-danger">No <i class="bi bi-x-square-fill"></i></a>
                    }
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Categories" asp-action="UpdateCategory" asp-route-id="@item.CategoryId" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-controller="Categories" asp-action="DeleteCategory" asp-route-id="@item.CategoryId" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

